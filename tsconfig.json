{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,

    "jsx": "react",

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",

    "noLib": true,
    "types": ["@rbxts/types"],

    "rootDir": "src",
    "outDir": "out",
    "incremental": true,
    "tsBuildInfoFile": "out/tsconfig.tsbuildinfo"
  }
}
